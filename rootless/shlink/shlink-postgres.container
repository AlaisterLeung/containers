[Unit]
Description=Shlink PostgreSQL Database

[Container]
ContainerName=shlink-postgres
Image=docker.io/postgres:18-alpine
Network=shlink.network
EnvironmentFile=%h/.config/containers/systemd/atxoft/shlink/shlink-postgres.env
Secret=shlink_postgres_password,type=env,target=POSTGRES_PASSWORD
Volume=shlink.volume:/var/lib/postgresql
PodmanArgs=--cpus=4 -m=4g
AutoUpdate=registry

[Service]
Restart=always
RestartSec=5

[Install]
WantedBy=default.target
